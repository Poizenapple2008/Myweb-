// –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ –æ—Å–Ω–æ–≤–∞—Ç–µ–ª—è—Ö
const founderButtons = document.querySelectorAll('.founder-btn');
const founderInfo = document.getElementById('founder-info');

founderButtons.forEach(button => {
  button.addEventListener('click', () => {
    // –£–¥–∞–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å —É –≤—Å–µ—Ö –∫–Ω–æ–ø–æ–∫
    founderButtons.forEach(btn => btn.classList.remove('active'));

    // –î–æ–±–∞–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å —Ç–µ–∫—É—â–µ–π –∫–Ω–æ–ø–∫–µ
    button.classList.add('active');

    // –ü–æ–ª—É—á–∞–µ–º –¥–∞–Ω–Ω—ã–µ –æ—Å–Ω–æ–≤–∞—Ç–µ–ª—è
    const founderKey = button.getAttribute('data-founder');
    const founder = foundersData[founderKey];

    // –û–±–Ω–æ–≤–ª—è–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é
    founderInfo.innerHTML = `
      <strong>${founder.name}</strong> ‚Äî ${founder.role}<br><br>
      ${founder.description}<br><br>
      <em>"${founder.quote}"</em>
    `;
  });
});

// –û–±—Ä–∞–±–æ—Ç–∫–∞ —Ñ–æ—Ä–º—ã —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏
const registrationForm = document.getElementById('registrationForm');
const registeredMembersSection = document.getElementById('registeredMembers');
const membersGrid = document.getElementById('membersGrid');
const membersCount = document.getElementById('membersCount');

let registeredMembers = [];

registrationForm.addEventListener('submit', function(e) {
  e.preventDefault();

  // –ü–æ–ª—É—á–∞–µ–º –¥–∞–Ω–Ω—ã–µ —Ñ–æ—Ä–º—ã
  const name = document.getElementById('name').value;
  const email = document.getElementById('email').value;
  const age = document.getElementById('age').value;

  // –ü—Ä–æ–≤–µ—Ä—è–µ–º email (–ø—Ä–æ—Å—Ç–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞)
  if (!email.includes('@') || !email.includes('.')) {
    alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π email!');
    return;
  }

  // –°–æ–∑–¥–∞–µ–º –æ–±—ä–µ–∫—Ç —É—á–∞—Å—Ç–Ω–∏–∫–∞
  const newMember = {
    name: name,
    email: email,
    age: age,
    joinDate: new Date().toLocaleDateString()
  };

  // –î–æ–±–∞–≤–ª—è–µ–º –≤ –º–∞—Å—Å–∏–≤
  registeredMembers.push(newMember);

  // –û–±–Ω–æ–≤–ª—è–µ–º —Å—á–µ—Ç—á–∏–∫
  membersCount.textContent = registeredMembers.length;

  // –î–æ–±–∞–≤–ª—è–µ–º –Ω–æ–≤–æ–≥–æ —É—á–∞—Å—Ç–Ω–∏–∫–∞ –≤ —Å–µ—Ç–∫—É
  const memberCard = document.createElement('div');
  memberCard.className = 'member-card';
  memberCard.innerHTML = `
    <strong>${name}</strong><br>
    –í–æ–∑—Ä–∞—Å—Ç: ${age}<br>
    –° –Ω–∞–º–∏ —Å: ${newMember.joinDate}
  `;
  membersGrid.appendChild(memberCard);

  // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Å–µ–∫—Ü–∏—é –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω–Ω—ã—Ö, –µ—Å–ª–∏ –æ–Ω–∞ —Å–∫—Ä—ã—Ç–∞
  registeredMembersSection.style.display = 'block';

  // –û—á–∏—â–∞–µ–º —Ñ–æ—Ä–º—É
  registrationForm.reset();

  // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –æ–± —É—Å–ø–µ—Ö–µ
  alert(`–°–ø–∞—Å–∏–±–æ, ${name}! üéâ –í—ã —Å—Ç–∞–ª–∏ —á–∞—Å—Ç—å—é –Ω–∞—à–µ–≥–æ —Å–æ–ª–Ω–µ—á–Ω–æ–≥–æ —Å–æ–æ–±—â–µ—Å—Ç–≤–∞ Solis! –°–∫–æ—Ä–æ –º—ã —Å–≤—è–∂–µ–º—Å—è —Å –≤–∞–º–∏.`);

  // –ü—Ä–æ–∫—Ä—É—á–∏–≤–∞–µ–º –∫ —Å–µ–∫—Ü–∏–∏ –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω–Ω—ã—Ö
  registeredMembersSection.scrollIntoView({ behavior: 'smooth' });
});

// –ò–º–∏—Ç–∞—Ü–∏—è —É–∂–µ –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω–Ω—ã—Ö —É—á–∞—Å—Ç–Ω–∏–∫–æ–≤ (–¥–ª—è –¥–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏–∏)
const demoMembers = [
  { name: "–ê–π–≥–µ—Ä–∏–º", age: 22, joinDate: "12.05.2023" },
  { name: "–î–∞–Ω–∏—è—Ä", age: 19, joinDate: "28.05.2023" },
  { name: "–ê—Ä—É–∂–∞–Ω", age: 25, joinDate: "03.06.2023" },
  { name: "–ê–ª–∏—Ö–∞–Ω", age: 17, joinDate: "10.06.2023" }
];

// –î–æ–±–∞–≤–ª—è–µ–º –¥–µ–º–æ-—É—á–∞—Å—Ç–Ω–∏–∫–æ–≤
window.addEventListener('DOMContentLoaded', () => {
  demoMembers.forEach(member => {
    const memberCard = document.createElement('div');
    memberCard.className = 'member-card';
    memberCard.innerHTML = `
      <strong>${member.name}</strong><br>
      –í–æ–∑—Ä–∞—Å—Ç: ${member.age}<br>
      –° –Ω–∞–º–∏ —Å: ${member.joinDate}
    `;
    membersGrid.appendChild(memberCard);
  });

  registeredMembers = [...demoMembers];
  membersCount.textContent = registeredMembers.length;
});